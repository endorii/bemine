generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AttributeType {
  TEXT // brand, model
  NUMBER // price, year, mileage
  SELECT // color, fuelType
  BOOLEAN // new / used
}

model Section {
  id    String @id @default(cuid())
  slug  String @unique
  title String

  categories Category[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id    String @id @default(cuid())
  slug  String
  title String

  sectionId String
  section   Section @relation(fields: [sectionId], references: [id])

  products   Product[]
  attributes Attribute[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug, sectionId])
}

model Product {
  id          String  @id @default(cuid())
  title       String
  description String?
  price       Int

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  values AttributeValue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attribute {
  id    String        @id @default(cuid())
  name  String // brand, year, color
  label String // Brand, Year, Color
  type  AttributeType

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  values AttributeValue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, categoryId])
}

model AttributeValue {
  id String @id @default(cuid())

  productId String
  product   Product @relation(fields: [productId], references: [id])

  attributeId String
  attribute   Attribute @relation(fields: [attributeId], references: [id])

  value String // "Apple", "2022", "Red", "true"

  createdAt DateTime @default(now())

  @@unique([productId, attributeId])
}
